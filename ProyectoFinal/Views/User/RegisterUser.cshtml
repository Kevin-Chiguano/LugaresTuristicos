@{
    Layout = null;
}
@model ProyectoFinal.Models.Usuario

@{
    ViewData["Title"] = "Registrar Usuario";
}

<h2>Registrar Usuario</h2>

<form asp-action="RegisterUser" method="post">
    <div class="form-group">
        <label>Nombre:</label>
        <input type="text" asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Apellido:</label>
        <input type="text" asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label>Teléfono:</label>
        <input type="text" asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cédula:</label>
        <input type="text" asp-for="Cedula" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ciudad:</label>
        <input type="text" asp-for="Ciudad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contraseña:</label>
        <input type="password" asp-for="Contrasena" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Registrar</button>
</form>
