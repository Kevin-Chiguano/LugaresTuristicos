@{
    Layout = null;
}
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

        <div class="row mt-4">
            <div class="col-12 col-md-4 mb-3">
                <a href="/User/Login" class="btn btn-primary btn-lg w-100">Login</a>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <a href="/User/RegisterUser" class="btn btn-success btn-lg w-100">Registrar Usuario</a>

            </div>
            <div class="col-12 col-md-4 mb-3">
                <a href="/Lugares/Create" class="btn btn-info btn-lg w-100">Registrar Lugar Turístico</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional for responsiveness) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
